<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - CoolJob</title>
    @if (ViewBag.Css != null)
    {
        foreach (var cssFile in ViewBag.Css as string[])
        {
            <link rel="stylesheet" href="~/@cssFile" />
        }
    }
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
<div class="page-container">
    <header class="main-header">
        <div class="header-content">
            <div class="logo-container">
                <h1 class="logo">CoolJob</h1>
                <p class="slogan">Твой старт карьеры в университете</p>
            </div>
            <div class="auth-buttons">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="welcome-text">Привет, @User.Identity.Name!</span>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="logout-form">
                        <button type="submit" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i> Выйти
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login" class="login-btn">
                        <i class="fas fa-sign-in-alt"></i> Войти
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="register-btn">
                        <i class="fas fa-user-plus"></i> Регистрация
                    </a>
                }
            </div>
        </div>

        <nav class="main-nav">
            <ul>
                <li><a href="/" class="nav-link active"><i class="fas fa-home"></i> Главная</a></li>
                <li><a href="/Jobs" class="nav-link"><i class="fas fa-briefcase"></i> Вакансии</a></li>
                <li><a href="/Applications" class="nav-link"><i class="fas fa-file-alt"></i> Мои заявки</a></li>
                <li><a href="/Profile" class="nav-link"><i class="fas fa-user"></i> Профиль</a></li>
                <li><a href="/Partners" class="nav-link"><i class="fas fa-handshake"></i> Партнёры</a></li>
            </ul>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>CoolJob</h3>
                <p>Платформа для поиска работы и стажировок в университете</p>
            </div>
            <div class="footer-section">
                <h3>Контакты</h3>
                <p><i class="fas fa-envelope"></i> contact@cooljob.edu</p>
                <p><i class="fas fa-phone"></i> +7 (XXX) XXX-XX-XX</p>
            </div>
            <div class="footer-section">
                <h3>Соцсети</h3>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-vk"></i></a>
                    <a href="#"><i class="fab fa-telegram"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; @DateTime.Now.Year - CoolJob. Все права защищены.</p>
        </div>
    </footer>
</div>
@RenderSection("scripts", required: false)
</body>
</html>